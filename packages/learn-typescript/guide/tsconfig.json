{
  "extends": "../common/tsconfig.json",
  "include": ["src/**/*", "types/**/*"], // 要编译哪些目录
  "exclude": ["node_modules"], // 要排除哪些目录
  "compilerOptions": {
    "outDir": "./out",
    "target": "ESNext", // 编译目标代码
    "lib": ["ESNext", "DOM"], // 支持的原生JS库
    "module": "ESNext",
    "strict": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  }
}